# =============================================================================
# Caculinha BI Backend - Environment template
# =============================================================================

# App
APP_NAME=Agent BI Backend
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Database (leave empty to use parquet fallback only)
DATABASE_URL=
PYODBC_CONNECTION_STRING=
USE_SQL_SERVER=false
FALLBACK_TO_PARQUET=true
SQL_SERVER_TIMEOUT=2
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Cache / Paths
CACHE_TTL_MINUTES=360
CACHE_MAX_AGE_DAYS=7
AGENT_GRAPH_CACHE_TTL_MINUTES=360
CACHE_DIR=data/cache_v2
PARQUET_DATA_PATH=data/parquet/admmat.parquet
PARQUET_FILE_PATH=data/parquet/admmat.parquet
RAG_FAISS_INDEX_PATH=data/rag/faiss_index.bin
LEARNING_FEEDBACK_PATH=data/feedback/
LEARNING_EXAMPLES_PATH=data/learning/
LEARNING_MAX_EXAMPLES=1000

# Security (minimum 32 chars)
SECRET_KEY=replace-with-your-secure-secret-key-min-32-chars
JWT_SECRET=replace-with-your-secure-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_AUTH_PER_MINUTE=5

# Logging / Metrics
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# LLM
LLM_PROVIDER=google
LLM_FALLBACK_PROVIDERS=groq,google
PLAYGROUND_MODE=local_only
PLAYGROUND_CANARY_ENABLED=false
PLAYGROUND_CANARY_ALLOWED_ROLES=admin
PLAYGROUND_CANARY_ALLOWED_USERS=
GEMINI_API_KEY=
LLM_MODEL_NAME=gemini-2.5-pro
GROQ_API_KEY=
GROQ_MODEL_NAME=llama-3.3-70b-versatile
DEV_FAST_MODE=false
LLM_MAX_OUTPUT_TOKENS=2048
LLM_HISTORY_MAX_MESSAGES=15
INTENT_CLASSIFICATION_MODEL=gemini-2.5-pro
CODE_GENERATION_MODEL=gemini-2.5-pro

# Supabase (disable auth locally if not configured)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
USE_SUPABASE_AUTH=false
